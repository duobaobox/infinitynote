{
  "name": "infinitynote",
  "private": true,
  "version": "2.2.1",
  "type": "module",
  "description": "无限便签 - 无限画布便签应用",
  "author": "无限便签团队",
  "main": "electron/main.cjs",
  "keywords": [
    "note",
    "canvas",
    "infinite",
    "sticky-notes"
  ],
  "engines": {
    "node": ">=20.19.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build && node scripts/copy-leader-line.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "verify": "npm run type-check && npm run lint:fix && npm run test",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:legacy": "node tests/run-tests.js",
    "test:performance": "node tests/core/performance-benchmark.js",
    "test:bundle": "node tests/utils/analyze-bundle-size.js",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:linux": "npm run build && electron-builder --linux",
    "electron:build:all": "bash scripts/build.sh",
    "release:clean": "bash scripts/clean-release.sh"
  },
  "dependencies": {
    "@ant-design/icons": "^6.0.2",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@tiptap/core": "^3.4.2",
    "@tiptap/extension-color": "^3.4.2",
    "@tiptap/extension-image": "^3.5.0",
    "@tiptap/extension-list": "^3.4.6",
    "@tiptap/extension-list-item": "^3.4.2",
    "@tiptap/extension-table": "^3.5.0",
    "@tiptap/extension-table-cell": "^3.5.0",
    "@tiptap/extension-table-header": "^3.5.0",
    "@tiptap/extension-table-row": "^3.5.0",
    "@tiptap/extension-text-align": "^3.4.2",
    "@tiptap/extension-text-style": "^3.4.2",
    "@tiptap/pm": "^3.4.2",
    "@tiptap/react": "^3.4.2",
    "@tiptap/starter-kit": "^3.4.2",
    "@types/markdown-it": "^14.1.2",
    "@types/turndown": "^5.0.5",
    "antd": "^5.27.3",
    "dexie": "^4.2.0",
    "electron-updater": "^6.4.4",
    "markdown-it": "^14.1.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "remixicon": "^4.6.0",
    "turndown": "^7.2.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.33.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^4.0.15",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^38.2.1",
    "electron-builder": "^26.0.12",
    "electron-builder-squirrel-windows": "^26.0.12",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "terser": "^5.44.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vitest": "^4.0.15",
    "wait-on": "^9.0.1"
  }
}
