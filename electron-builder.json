{
  "appId": "com.infinitynote.app",
  "productName": "无限便签",
  "copyright": "Copyright © 2025 无限便签团队",
  "directories": {
    "output": "release",
    "buildResources": "build"
  },
  "files": ["dist/**/*", "electron/**/*.cjs", "package.json"],
  "extraResources": [
    {
      "from": "src/assets/logo.png",
      "to": "logo.png"
    },
    {
      "from": "src/assets/tray@2x.png",
      "to": "tray@2x.png"
    },
    {
      "from": "src/assets/logo.ico",
      "to": "logo.ico"
    },
    {
      "from": "src/assets/logo.icns",
      "to": "logo.icns"
    }
  ],
  "mac": {
    "category": "public.app-category.productivity",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "zip",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "build/icon.icns",
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": null,
    "entitlementsInherit": null,
    "extendInfo": {
      "NSCameraUsageDescription": "此应用需要访问相机以捕获图像。",
      "NSMicrophoneUsageDescription": "此应用需要访问麦克风以录制音频。",
      "NSDocumentsFolderUsageDescription": "此应用需要访问文档文件夹以保存和读取文件。"
    }
  },
  "dmg": {
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ],
    "title": "无限便签 安装器",
    "backgroundColor": "#ffffff"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64", "ia32"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      },
      {
        "target": "zip",
        "arch": ["x64"]
      }
    ],
    "icon": "build/icon.ico",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "verifyUpdateCodeSignature": false,
    "requestedExecutionLevel": "asInvoker",
    "fileAssociations": [
      {
        "ext": "innote",
        "name": "InfinityNote Document",
        "description": "无限便签文档",
        "icon": "build/icon.ico",
        "role": "Editor"
      }
    ]
  },
  "nsis": {
    "oneClick": false,
    "allowElevation": true,
    "allowToChangeInstallationDirectory": true,
    "installerIcon": "build/icon.ico",
    "uninstallerIcon": "build/icon.ico",
    "installerHeaderIcon": "build/icon.ico",
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "无限便签",
    "include": null,
    "perMachine": false,
    "deleteAppDataOnUninstall": false,
    "runAfterFinish": true,
    "menuCategory": false,
    "installerLanguages": ["zh_CN", "en_US"],
    "language": "2052",
    "displayLanguageSelector": false,
    "multiLanguageInstaller": false,
    "packElevateHelper": true,
    "warningsAsErrors": false
  },
  "portable": {
    "artifactName": "${productName}-${version}-portable.${ext}",
    "requestExecutionLevel": "user"
  },
  "linux": {
    "target": ["AppImage", "deb", "rpm"],
    "category": "Office",
    "icon": "build/icon.png",
    "maintainer": "无限便签团队"
  },
  "publish": null,
  "compression": "normal",
  "asar": true,
  "asarUnpack": ["**/*.node"],
  "electronDownload": {
    "mirror": "https://npmmirror.com/mirrors/electron/"
  }
}
